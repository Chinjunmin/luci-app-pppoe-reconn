{
	"luci-app-pppoe-reconn": {
		"description": "Allow LuCI to execute reconnect script and read logs",
		"read": {
			"file": {
				"/tmp/pppoe_ip_history.log": [ "read" ]
			},
			"uci": [ "pppoe_reconn" ]
		},
		"write": {
			"file": {
				"/tmp/pppoe_ip_history.log": [ "write" ]
			},
			"uci": [ "pppoe_reconn" ],
    		"ubus": {
    		    "pppoe_reconn": [ "reconnect", "clear_log" ]
		    }
		}
	}
}